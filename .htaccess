# Remember to enable display_errors on development environments only.
<IfModule mod_php5.c>
    php_value display_errors 1
    php_flag register_globals off
</IfModule>
AddDefaultCharset UTF-8
RewriteEngine on

# If know that mod_rewrite is enabled, but you are still getting mod_rewrite errors,
# uncomment the line below and replace "/" with your base directory.
# RewriteBase /
# Originele rewrite rules
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^admin/ - [C]
RewriteRule .* admin/index.php [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule .* index.php
# end originele rewrite rules

# This ensures that Apache will not mistake the URL mysite.com/archive/ for a request for the physical directory that stores files
RewriteCond %{REQUEST_URI}  .+\/archive\/
RewriteRule !\.(js|ico|gif|jpg|png|css)$ index.php

<FilesMatch "\.(php|ini)$">
 Order Allow,Deny
 Deny from all
</FilesMatch>

<Files index.php>
Allow from all
</Files>

# Uncomment the lines below in order to enable caching of some files via Apache (after a finished site has gone live)
<IfModule mod_expires.c>
  <FilesMatch "\.(js|css|ico|gif|png|jpg|JPG|eot|woff|xml|kml|json)$">
       ExpiresActive on
       ExpiresDefault "access plus 10 day"
       Header set Cache-Control "max-age=604800"
       Header append Cache-Control "public"
       Header unset ETag
   </FilesMatch>
</IfModule>
<IfModule mod_expires.c>
   ExpiresActive on
  ExpiresByType application/atom+xml "access plus 10 day"
  ExpiresByType application/rss+xml "access plus 10 day"
  ExpiresByType application/json "access plus 10 day"
  ExpiresByType text/javascript "access plus 10 day"
  ExpiresByType text/xml "access plus 10 day"
  Header set Cache-Control "max-age=604800"
  Header append Cache-Control "public"
</IfModule>
# Sam toegevoegd (opgelet set moet gebruikt worden ipv append om problemen met
# gzip te vermijden
<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|xml|gz|kml|xml|json)$">
    Header set Vary Accept-Encoding
  </FilesMatch>
</IfModule>
